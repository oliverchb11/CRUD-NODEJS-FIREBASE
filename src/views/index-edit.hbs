<div class="col-md-6 offset-md-3 mt-5">
    <div class="card">
        <div class="card-header">
            <h1 class="text-center">Contactos</h1>
        </div>
        <div class="card-body">
            {{#if contactos}}

            <ul class="list-group">
                {{#each contactos}}
                <li class="list-group-item">
                    {{nombre}}
                </li>
                <li class="list-group-item">
                    {{apellido}}
                </li>
                <li class="list-group-item">
                    {{email}}
                </li>
                <li class="list-group-item">
                    {{numero}}
                </li>
                <a href="/elimar-usuario/{{@key}}" class="form-control bg-danger text-center"> Borrar </a>
                <br>
                <a href="#" class="form-control bg-warning text-center"> Editar </a>
                {{/each}}
            </ul>

            {{else}}
            <h1>No hay contactos</h1>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="/editar-usuario" method="post">
                <div class="form-group">
                    <input type="text" name="nombre" value="{{data.nombre}}" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="apellido" value="{{data.apellido}}" class="form-control">
                </div>
                <div class="form-group">
                    <input type="email" name="email" value="{{data.email}}" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="numero" value="{{data.numero}}" class="form-control">
                </div>
                <button class="btn btn-primary">Editar datos</button>
            </form>
        </div>
    </div>
</div>